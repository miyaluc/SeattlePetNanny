@model SeattlePetNanny.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">

    <div asp-validation-summary="All"></div>
    <h4>Create Your Account </h4>

    <label asp-for="Email">Email:</label>
    <input asp-for="Email" />
    <span asp-validation-for="Email"></span> <br /> <br />

    <label asp-for="PhoneNumber">Phone Number:</label>
    <input asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber"></span><br />
    &nbsp; &nbsp; &nbsp;Ex. (xxx) xxx-xxxx<br /> <br />

    <label asp-for="FirstName">First Name:</label>
    <input asp-for="FirstName" />
    <span asp-validation-for="FirstName"></span> <br /> <br />

    <label asp-for="LastName">Last Name:</label>
    <input asp-for="LastName" />
    <span asp-validation-for="LastName"></span> <br /> <br />

    <label asp-for="Birthday">Birthday\:</label>
    <input asp-for="Birthday" />
    <span asp-validation-for="Birthday"></span> <br /> <br />

    <label asp-for="Address">Address:</label>
    <input asp-for="Address" />
    <span asp-validation-for="Address"></span> <br /> <br />

    <label asp-for="Password">Password:</label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span><br />
    &nbsp; &nbsp; &nbsp;Requires Capital and lower case letters, number and special character<br /> <br />

    <label asp-for="ConfirmPassword">Confirm Password:</label>
    <input asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword"></span><br /> <br />

    <button type="submit">Register</button>

</form>

<a asp-action="Index" asp-controller="Home">Return to Home Page.</a>